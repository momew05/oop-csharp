<Window x:Class="кт16.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:кт16"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBlock HorizontalAlignment="Left" Margin="29,20,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="20" Width="130"><Run Text="1"/><Run Text=". "/><Run Text="Сколько "/><Run Text="будет 5 + 5?"/></TextBlock>
        <RadioButton Checked="answer" Unchecked="answer" GroupName="Answer1" Content="5" HorizontalAlignment="Left" Margin="29,50,0,0" VerticalAlignment="Top"/>
        <RadioButton Checked="answer" Unchecked="answer" x:Name="correct1" GroupName="Answer1" Content="10" HorizontalAlignment="Left" Margin="29,70,0,0" VerticalAlignment="Top"/>
        <RadioButton Checked="answer" Unchecked="answer" GroupName="Answer1" Content="15" HorizontalAlignment="Left" Margin="29,90,0,0" VerticalAlignment="Top"/>

            <TextBlock Text="2. Выберите овощи" HorizontalAlignment="Left" Margin="29,120,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="20" Width="130"></TextBlock>
        <CheckBox Checked="answer" Unchecked="answer" Content=" Помидор" HorizontalAlignment="Left" Margin="29,140,0,0" VerticalAlignment="Top"/>
        <CheckBox Checked="answer" Unchecked="answer" x:Name="correct2" Content=" Картошка" HorizontalAlignment="Left" Margin="29,160,0,0" VerticalAlignment="Top"/>
        <CheckBox Checked="answer" Unchecked="answer" x:Name="correct22" Content=" Огурец" HorizontalAlignment="Left" Margin="29,180,0,0" VerticalAlignment="Top"/>

            <TextBlock Text="3. Кто автор теории относительности?" HorizontalAlignment="Left" Margin="29,216,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="20" Width="300"></TextBlock>
        <RadioButton Checked="answer" Unchecked="answer" GroupName="Answer2" Content="Исаак Ньютон" HorizontalAlignment="Left" Margin="29,240,0,0" VerticalAlignment="Top"/>
        <RadioButton Checked="answer" Unchecked="answer" x:Name="correct3" GroupName="Answer2" Content="Альберт Эйнштейн" HorizontalAlignment="Left" Margin="29,260,0,0" VerticalAlignment="Top"/>
        <RadioButton Checked="answer" Unchecked="answer" GroupName="Answer2" Content="Никола Тесла" HorizontalAlignment="Left" Margin="29,280,0,0" VerticalAlignment="Top"/>

            <TextBlock Text="4. Какие из этих языков романские?" HorizontalAlignment="Left" Margin="29,320,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="20" Width="200"></TextBlock>
        <CheckBox Checked="answer" Unchecked="answer" Content=" Английский" HorizontalAlignment="Left" Margin="29,340,0,0" VerticalAlignment="Top"/>
        <CheckBox Checked="answer" Unchecked="answer" x:Name="correct4" Content=" Румынский" HorizontalAlignment="Left" Margin="29,360,0,0" VerticalAlignment="Top"/>
        <CheckBox Checked="answer" Unchecked="answer" Content=" Немецкий" HorizontalAlignment="Left" Margin="29,380,0,0" VerticalAlignment="Top"/>

            <TextBlock Text="5. Самая длинная река в мире?" HorizontalAlignment="Left" Margin="270,20,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="20" Width="200"></TextBlock>
        <RadioButton Checked="answer" Unchecked="answer" GroupName="Answer3" Content="Янцзы" HorizontalAlignment="Left" Margin="270,50,0,0" VerticalAlignment="Top"/>
        <RadioButton Checked="answer" Unchecked="answer" x:Name="correct5" GroupName="Answer3" Content="Нил" HorizontalAlignment="Left" Margin="270,70,0,0" VerticalAlignment="Top"/>
        <RadioButton Checked="answer" Unchecked="answer" GroupName="Answer3" Content="Амазонка" HorizontalAlignment="Left" Margin="270,90,0,0" VerticalAlignment="Top"/>

            <TextBlock Text="6. Какие из этих столиц находятся в Европе?" HorizontalAlignment="Left" Margin="270,120,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="20" Width="250"></TextBlock>
        <CheckBox Checked="answer" Unchecked="answer" Content=" Оттава" HorizontalAlignment="Left" Margin="270,140,0,0" VerticalAlignment="Top"/>
        <CheckBox Checked="answer" Unchecked="answer" x:Name="correct6" Content=" Вена" HorizontalAlignment="Left" Margin="270,160,0,0" VerticalAlignment="Top"/>
        <CheckBox Checked="answer" Unchecked="answer" x:Name="correct62" Content=" Прага" HorizontalAlignment="Left" Margin="270,180,0,0" VerticalAlignment="Top"/>

        <TextBlock Text="7. Год октябрьской революции?" HorizontalAlignment="Left" Margin="270,216,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="20" Width="200"></TextBlock>
        <RadioButton Checked="answer" Unchecked="answer" GroupName="Answer4" Content="1905" HorizontalAlignment="Left" Margin="270,240,0,0" VerticalAlignment="Top"/>
        <RadioButton Checked="answer" Unchecked="answer" x:Name="correct7" GroupName="Answer4" Content="1917" HorizontalAlignment="Left" Margin="270,260,0,0" VerticalAlignment="Top"/>
        <RadioButton Checked="answer" Unchecked="answer" GroupName="Answer4" Content="1922" HorizontalAlignment="Left" Margin="270,280,0,0" VerticalAlignment="Top"/>

        <TextBlock Text="8. Сколько хромосом у человека?" HorizontalAlignment="Left" Margin="270,320,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="20" Width="200"></TextBlock>
        <CheckBox Checked="answer" Unchecked="answer" Content=" 45" HorizontalAlignment="Left" Margin="270,340,0,0" VerticalAlignment="Top"/>
        <CheckBox Checked="answer" Unchecked="answer" x:Name="correct8" Content=" 46" HorizontalAlignment="Left" Margin="270,360,0,0" VerticalAlignment="Top"/>
        <CheckBox Checked="answer" Unchecked="answer" Content=" 48" HorizontalAlignment="Left" Margin="270,380,0,0" VerticalAlignment="Top"/>

        <TextBlock Text="9. Самая большая планета в СС?" HorizontalAlignment="Left" Margin="540,20,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="20" Width="200"></TextBlock>
        <RadioButton Checked="answer" Unchecked="answer" GroupName="Answer5" Content="Сатурн" HorizontalAlignment="Left" Margin="540,50,0,0" VerticalAlignment="Top"/>
        <RadioButton Checked="answer" Unchecked="answer" x:Name="correct9" GroupName="Answer5" Content="Юпитер" HorizontalAlignment="Left" Margin="540,70,0,0" VerticalAlignment="Top"/>
        <RadioButton Checked="answer" Unchecked="answer" GroupName="Answer5" Content="Нептун" HorizontalAlignment="Left" Margin="540,90,0,0" VerticalAlignment="Top"/>

        <TextBlock Text="10. Выберите млекопитающих" HorizontalAlignment="Left" Margin="540,120,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="20" Width="250"></TextBlock>
        <CheckBox Checked="answer" Unchecked="answer" x:Name="correct10" Content=" Кит" HorizontalAlignment="Left" Margin="540,140,0,0" VerticalAlignment="Top"/>
        <CheckBox Checked="answer" Unchecked="answer" Content=" Пингвин" HorizontalAlignment="Left" Margin="540,160,0,0" VerticalAlignment="Top"/>
        <CheckBox Checked="answer" Unchecked="answer" Content=" Крокодил" HorizontalAlignment="Left" Margin="540,180,0,0" VerticalAlignment="Top"/>

        <TextBlock Text="11. Что означает Au?" HorizontalAlignment="Left" Margin="540,216,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="20" Width="200"></TextBlock>
        <RadioButton Checked="answer" Unchecked="answer" GroupName="Answer6" Content="Серебро" HorizontalAlignment="Left" Margin="540,240,0,0" VerticalAlignment="Top"/>
        <RadioButton Checked="answer" Unchecked="answer" x:Name="correct11" GroupName="Answer6" Content="Золото" HorizontalAlignment="Left" Margin="540,260,0,0" VerticalAlignment="Top"/>
        <RadioButton Checked="answer" Unchecked="answer" GroupName="Answer6" Content="Железо" HorizontalAlignment="Left" Margin="540,280,0,0" VerticalAlignment="Top"/>

        <TextBlock Text="12. Как зовут мою кошку?" HorizontalAlignment="Left" Margin="540,320,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="20" Width="200"></TextBlock>
        <CheckBox Checked="answer" Unchecked="answer" Content=" Снежа" HorizontalAlignment="Left" Margin="540,340,0,0" VerticalAlignment="Top"/>
        <CheckBox Checked="answer" Unchecked="answer" x:Name="correct12" Content=" Стеша" HorizontalAlignment="Left" Margin="540,360,0,0" VerticalAlignment="Top"/>
        <CheckBox Checked="answer" Unchecked="answer" Content=" Биба" HorizontalAlignment="Left" Margin="540,380,0,0" VerticalAlignment="Top"/>
        
        <Button Content="Завершить" HorizontalAlignment="Left" Margin="695,388,0,0" Height="20" Width="80" VerticalAlignment="Top" Click="endquiz_clk"/>
    </Grid>
</Window>
