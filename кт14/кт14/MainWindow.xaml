<Window x:Class="кт14.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:кт14"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Background" Value="Pink"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="HotPink"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Margin" Value="5"/>
        </Style>
        
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="HotPink"/>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <TextBlock x:Name="Display"
                   FontSize="32"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Right"
                   TextAlignment="Right"
                   Margin="5"
                   Text="0"/>

        <UniformGrid Grid.Row="1" Columns="4" Rows="5">
            <Button Content="Cтереть всё" Click="BtnClear_Click"/>
            <Button Content="Стереть" Click="BtnBackspace_Click"/>
            <Button Content="/" Click="BtnOp_Click"/>
            <Button Content="*" Click="BtnOp_Click"/>

           
            <Button Content="7" Click="BtnDigit_Click"/>
            <Button Content="8" Click="BtnDigit_Click"/>
            <Button Content="9" Click="BtnDigit_Click"/>
            <Button Content="-" Click="BtnOp_Click"/>

            <Button Content="4" Click="BtnDigit_Click"/>
            <Button Content="5" Click="BtnDigit_Click"/>
            <Button Content="6" Click="BtnDigit_Click"/>
            <Button Content="+" Click="BtnOp_Click"/>

            <Button Content="1" Click="BtnDigit_Click"/>
            <Button Content="2" Click="BtnDigit_Click"/>
            <Button Content="3" Click="BtnDigit_Click"/>
            <Button Content="=" Click="BtnEqual_Click"/>

            <Button Content="0" Click="BtnDigit_Click"/>
            <Image Source="/imgs/1.png" Height="90"/>
        </UniformGrid>
    </Grid>
</Window>
